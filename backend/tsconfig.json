{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src", "src/@types/*.d.ts"],
  "files": ["src/@types/index.d.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
